# : kivy 2.1.0

<MainScreen>:
    orientation: 'vertical'

    AnchorLayout:
        anchor_y: 'top'
        size_hint_y: .20

        Label:
            id: 'operation'
            font_size: 40
            text: root.operation
            text_size: self.size
            halign: 'right'
            padding_x: 20

    AnchorLayout:
        anchor_y: 'center'
        size_hint_y: .10

        Label:
            id: 'resultat'
            text: root.resultat
            text_size: self.size
            halign: 'right'
            padding_x: 20

    BoxLayout:
        orientation: 'vertical'

        GridLayout:
            cols: 4

            Button:
                text: "C"
                background_color: 0, 0, 0, 0
                on_press: app.on_click_button(self)
            Button:
                text: "%"
                background_color: 0, 0, 0, 0
                on_press: app.on_click_button(self)
            Button:
                text: "Del"
                background_color: 0, 0, 0, 0
                on_press: app.on_click_button(self)
            Button:
                text: "/"
                color: '#00FFFF'
                background_color: 0, 0, 0, 0
                on_press: app.on_click_button(self)

        GridLayout:
            cols: 4
            Button:
                id: 'seven'
                text: "7"
                background_color: 0, 0, 0, 0
                on_press: app.on_click_button(self)
            Button:
                id: 'eight'
                text: "8"
                background_color: 0, 0, 0, 0
                on_press: app.on_click_button(self)
            Button:
                id: 'nine'
                text: "9"
                background_color: 0, 0, 0, 0
                on_press: app.on_click_button(self)
            Button:
                id: 'multiple'
                text: "X"
                color: '#00FFFF'
                background_color: 0, 0, 0, 0
                on_press: app.on_click_button(self)

        GridLayout:
            cols: 4
            Button:
                id: 'four'
                text: "4"
                background_color: 0, 0, 0, 0
                on_press: app.on_click_button(self)
            Button:
                id: 'five'
                text: "5"
                background_color: 0, 0, 0, 0
                on_press: app.on_click_button(self)
            Button:
                id: 'six'
                text: "6"
                background_color: 0, 0, 0, 0
                on_press: app.on_click_button(self)
            Button:
                id: 'less'
                text: "-"
                color: '#00FFFF'
                background_color: 0, 0, 0, 0
                on_press: app.on_click_button(self)

        GridLayout:
            cols: 4
            Button:
                id: 'one'
                text: "1"
                background_color: 0, 0, 0, 0
                on_press: app.on_click_button(self)
            Button:
                id: 'tow'
                text: "2"
                background_color: 0, 0, 0, 0
                on_press: app.on_click_button(self)
            Button:
                id: 'tree'
                text: "3"
                background_color: 0, 0, 0, 0
                on_press: app.on_click_button(self)
            Button:
                id: 'plus'
                text: "+"
                color: '#00FFFF'
                background_color: 0, 0, 0, 0
                on_press: app.on_click_button(self)

        GridLayout:
            cols: 4
            Button:
                id: 'double_zero'
                text: "00"
                background_color: 0, 0, 0, 0
                on_press: app.on_click_button(self)
            Button:
                id: 'zero'
                text: "0"
                background_color: 0, 0, 0, 0
                on_press: app.on_click_button(self)
            Button:
                id: 'coma'
                text: ","
                background_color: 0, 0, 0, 0
                on_press: app.on_click_button(self)
            Button:
                id: 'egal'
                text: "="
                color: '#00FFFF'
                background_color: 0, 0, 0, 0
                on_press: app.calculate(self)